<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- ImageView cho biểu tượng chi tiêu -->
        <!-- Thay thế bằng biểu tượng của bạn -->

        <!-- TextView cho hiển thị số tiền -->

        <ImageView
            android:id="@+id/ic_spending_limit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="9dp"
            android:src="@drawable/g_alert" />

        <TextView
            android:id="@+id/item_amount_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ic_spending_limit"
            android:text="Amount: $100"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- TextView cho hiển thị mô tả -->
        <TextView
            android:id="@+id/item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_amount_display"
            android:layout_toEndOf="@id/ic_spending_limit"
            android:text="Description: Monthly Budget"
            android:textSize="16sp"
            android:textColor="#555555" />

        <!-- TextView cho hiển thị thời gian -->
        <TextView
            android:id="@+id/item_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_description"
            android:layout_toEndOf="@id/ic_spending_limit"
            android:text="Duration: 01/10/2024 - 31/10/2024"
            android:textSize="14sp"
            android:textColor="#888888" />


    </RelativeLayout>

</LinearLayout>